post_install() {
    echo "==> omarchy-zsh installed successfully!"
    echo ""
    echo "==> To run zsh from bash:"
    echo "    zsh"
    echo ""
    echo "==> To set as default shell:"
    echo "    omarchy-setup-zsh"
}

post_upgrade() {
    echo "==> Run omarchy-setup-zsh for new changes to take effect"
}

post_remove() {
    echo "==> omarchy-zsh has been removed"
    echo "==> To restore bash, copy a backup to ~/.bashrc"
}
