pkgname=wayfreeze
pkgver=0.2.0
pkgrel=1
pkgdesc="Tool to freeze the screen of a Wayland compositor"
arch=('x86_64' 'aarch64')
url="https://github.com/Jappie3/wayfreeze"
license=('AGPL-3.0')
conflicts=('wayfreeze-git')
depends=('wayland' 'libxkbcommon')
makedepends=('cargo')
options=(!debug)
source=("$pkgname-$pkgver.tar.gz::https://github.com/Jappie3/wayfreeze/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('9ab941cbd242f82a7ff807c573e23f5f0576c2815a8a493581a9037a0d754bb6')

build() {
  cd "$pkgname-$pkgver"
  cargo build --release
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
